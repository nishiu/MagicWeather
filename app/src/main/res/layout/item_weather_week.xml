<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/qb_px_75"
    android:background="@drawable/bg_white_17"
    android:layout_marginLeft="@dimen/qb_px_10"
    android:layout_marginRight="@dimen/qb_px_10"
    android:layout_marginTop="@dimen/qb_px_3"
    android:layout_marginBottom="@dimen/qb_px_3"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/group_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_centerVertical="true"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11月12日"
            android:textSize="@dimen/qb_px_16"
            android:gravity="center"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/tv_week_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期一"
            android:textSize="@dimen/qb_px_14"
            android:layout_marginTop="@dimen/qb_px_5"
            android:gravity="center"
            android:textColor="#666666"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/group_date"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/qb_px_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_day_weather"
            android:layout_width="@dimen/qb_px_31"
            android:layout_height="@dimen/qb_px_31"
            android:layout_marginLeft="@dimen/qb_px_5"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/tv_temp_min_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="11°~12°"
            android:textColor="#666666"
            android:textSize="@dimen/qb_px_16" />

        <ImageView
            android:id="@+id/icon_night_weather"
            android:layout_width="@dimen/qb_px_31"
            android:layout_height="@dimen/qb_px_31"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/qb_px_15"
        android:gravity="center"
        android:text="西北风4-5级转微风"
        android:textColor="#666666"
        android:maxLength="10"
        android:textSize="@dimen/qb_px_14" />
</RelativeLayout>