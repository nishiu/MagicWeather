<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/qb_px_360"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/item_mask"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="@dimen/qb_px_1"
            android:layout_height="match_parent"
            android:background="#FFF2F4F9"
            android:layout_marginTop="@dimen/qb_px_10"
            android:layout_marginBottom="@dimen/qb_px_10"
            android:layout_alignParentRight="true"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/qb_px_140"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_week_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星期一"
                    android:textSize="@dimen/qb_px_16"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#666666"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11/12"
                    android:textSize="@dimen/qb_px_16"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#666666"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_day_weather"
                        android:layout_width="@dimen/qb_px_21"
                        android:layout_height="@dimen/qb_px_21"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_day_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晴"
                    android:textSize="@dimen/qb_px_16"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#666666"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/qb_px_80"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/qb_px_140"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_night_weather"
                        android:layout_width="@dimen/qb_px_21"
                        android:layout_height="@dimen/qb_px_21"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_night_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="晴"
                    android:textSize="@dimen/qb_px_16"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#666666"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>