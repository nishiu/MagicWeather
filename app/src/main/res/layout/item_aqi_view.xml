<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/qb_px_10"
    android:paddingLeft="@dimen/qb_px_15"
    android:paddingBottom="@dimen/qb_px_10"
    android:paddingRight="@dimen/qb_px_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气指数"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="@dimen/qb_px_18"/>

        <LinearLayout
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="@dimen/qb_px_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看更多"
                android:textSize="@dimen/qb_px_15"
                android:textColor="#999999"/>

            <ImageView
                android:layout_width="@dimen/qb_px_7"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:tintMode="src_atop"
                android:layout_marginLeft="@dimen/qb_px_2"
                app:tint="#999999" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_30"
            android:layout_marginBottom="@dimen/qb_px_17"
            android:layout_marginLeft="@dimen/qb_px_25">

            <com.frostsowner.magic.weather.view.WaveView
                android:id="@+id/aqi_capsule"
                android:layout_width="@dimen/qb_px_80"
                android:layout_height="@dimen/qb_px_160"
                app:waveShape="capsule" />

            <TextView
                android:id="@+id/tv_aqi_capsule_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空气质量"
                android:textColor="#FF0FCE9E"
                android:layout_marginTop="@dimen/qb_px_22"
                android:textSize="@dimen/qb_px_12"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_aqi_capsule_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="64"
                android:textColor="#ffffff"
                android:layout_marginTop="@dimen/qb_px_60"
                android:textSize="@dimen/qb_px_24"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_aqi_capsule_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优"
                android:textColor="#ffffff"
                android:layout_marginTop="@dimen/qb_px_111"
                android:textSize="@dimen/qb_px_12"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="@dimen/qb_px_150"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qb_px_20"
            android:layout_marginBottom="@dimen/qb_px_15"
            android:layout_marginTop="@dimen/qb_px_18"
            android:layout_alignParentRight="true">

            <include
                android:id="@+id/item_pm25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_aqi_index"/>

            <include
                android:id="@+id/item_pm10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_12"
                layout="@layout/item_aqi_index"/>

            <include
                android:id="@+id/item_no2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_12"
                layout="@layout/item_aqi_index"/>

            <include
                android:id="@+id/item_so2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_12"
                layout="@layout/item_aqi_index"/>

            <include
                android:id="@+id/item_co"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_12"
                layout="@layout/item_aqi_index"/>

            <include
                android:id="@+id/item_o3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_12"
                layout="@layout/item_aqi_index"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>