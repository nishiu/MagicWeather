<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:id="@+id/item_root"
    android:layout_height="@dimen/qb_px_280">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/qb_px_130"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_hour_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00"
                android:textSize="@dimen/qb_px_16"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#666666"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_weather"
                    android:layout_width="@dimen/qb_px_21"
                    android:layout_height="@dimen/qb_px_21"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晴"
                android:textSize="@dimen/qb_px_16"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#666666"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/qb_px_80"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_wind_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="东北风"
                android:textSize="@dimen/qb_px_16"
                android:gravity="center"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tv_wind_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1级"
                android:textSize="@dimen/qb_px_16"
                android:gravity="center"
                android:textColor="#666666"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/qb_px_1"
        android:layout_height="match_parent"
        android:background="#F2F4F9"
        android:layout_marginTop="@dimen/qb_px_15"
        android:layout_marginBottom="@dimen/qb_px_15"
        android:layout_alignParentRight="true"/>
</RelativeLayout>