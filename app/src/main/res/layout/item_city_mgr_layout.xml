<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_56"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/status_a"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/qb_px_17"
        android:layout_marginRight="@dimen/qb_px_17"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_city_name_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京市朝阳区"
                android:textColor="#333333"
                android:maxLength="10"
                android:textSize="@dimen/qb_px_17"/>

            <ImageView
                android:id="@+id/icon_locate_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/qb_px_7"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/qb_px_100"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|left"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/icon_weather"
                android:layout_width="@dimen/qb_px_20"
                android:layout_height="@dimen/qb_px_20"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"/>

            <TextView
                android:id="@+id/tv_temperature_min_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:text="25/15°C"
                android:layout_marginLeft="@dimen/qb_px_10"
                android:textSize="@dimen/qb_px_17"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/status_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/qb_px_17"
        android:layout_marginRight="@dimen/qb_px_7"
        android:visibility="invisible">

        <LinearLayout
            android:id="@+id/btn_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/qb_px_10">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_city_name_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市朝阳区"
            android:textColor="#333333"
            android:maxLength="10"
            android:textSize="@dimen/qb_px_17"
            android:layout_toRightOf="@+id/btn_minus"
            android:layout_marginLeft="@dimen/qb_px_17"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/icon_locate_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:layout_toRightOf="@+id/tv_city_name_b"/>

        <LinearLayout
            android:id="@+id/btn_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/qb_px_10"
            android:gravity="center">

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#D2D2D2"/>
</RelativeLayout>